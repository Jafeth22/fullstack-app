{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@ui": ["./src/components/ui"],
      "@services": ["./src/services"], // This away because of the index.js file
      "@models": ["./src/lib/models"],
      "@components": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@hooks": ["./src/hooks"],
      "@/*": ["./src/*"], // This does not have index.js file
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
